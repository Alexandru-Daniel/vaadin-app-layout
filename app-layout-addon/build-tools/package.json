{
  "name": "vaadin-app-layout-build",
  "description": "app-layout integration for vaadin",
  "homepage": "https://github.com/appreciated/vaadin-app-layout",
  "version": "1.0.0",
  "authors": [
    "appreciated <goebeljohannes@gmx.net>",
    "deyaeddin <deya@gmx.com"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "node-gyp": "3.6.2",
    "bower": "1.8.2",
    "eslint": "4.17.0",
    "eslint-config-vaadin": "0.2.5",
    "eslint-plugin-html": "4.0.2",
    "gulp": "3.9.1",
    "gulp-eslint": "4.0.2",
    "gulp-clean": "0.4.0",
    "gulp-html-extract": "0.3.0",
    "gulp-stylelint": "6.0.0",
    "polymer-cli": "1.6.0",
    "stylelint": "8.4.0",
    "stylelint-config-vaadin": "0.1.2"
  },
  "scripts": {
    "start": "cd ../src/main/webapp/VAADIN/frontend && polymer serve",
    "lint": "gulp lint",
    "test": "cd ../src/main/webapp/VAADIN/frontend && polymer test",
    "test:integration": "cd ../src/main/webapp/VAADIN/frontend && polymer build # test that psk builds without error with the CLI",
    "install": "cd ../src/main/webapp/VAADIN/frontend && bower install",
    "build": "cd ../src/main/webapp/VAADIN/frontend && polymer build",
    "move": "gulp move",
    "clean-build": "gulp clean --force"
  }
}
